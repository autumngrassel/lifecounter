<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/screen"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ffffffff">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:shrinkColumns="*"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:layout_marginTop="20dp"
            android:id="@+id/row1">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="10dp"
                >

                <TextView
                    android:id="@+id/player1"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/player1"
                    android:textColor="#ff000000"
                    android:textStyle="bold"
                    android:paddingLeft="5dp">
                </TextView>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">
                    <Button
                        android:id="@+id/p1_a1"
                        android:layout_height="wrap_content"
                        android:layout_width="40dp"
                        android:layout_weight=".5"
                        android:layout_margin="5dp"
                        android:text="@string/plus_one"
                        android:clickable="true"
                        android:textStyle="bold"
                        android:background="#4e919191"
                        android:onClick="updateP1">
                    </Button>
                    <Button
                        android:id="@+id/p1_s1"
                        android:layout_height="wrap_content"
                        android:layout_width="40dp"
                        android:layout_weight=".5"
                        android:layout_margin="5dp"
                        android:text="@string/minus_one"
                        android:textStyle="bold"
                        android:background="#4e919191"
                        android:clickable="true"
                        android:onClick="updateP1">
                    </Button>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:layout_gravity="center_horizontal">
                    <Button
                        android:id="@+id/p1_a5"
                        android:layout_height="wrap_content"
                        android:layout_width="40dp"
                        android:layout_weight=".5"
                        android:layout_margin="5dp"
                        android:text="@string/plus_five"
                        android:textStyle="bold"
                        android:background="#4e919191"
                        android:clickable="true"
                        android:onClick="updateP1">
                    </Button>
                    <Button
                        android:id="@+id/p1_s5"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:layout_margin="5dp"
                        android:text="@string/minus_five"
                        android:layout_width="40dp"
                        android:textStyle="bold"
                        android:background="#4e919191"
                        android:clickable="true"
                        android:onClick="updateP1">
                    </Button>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="10dp"
                >

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/player2"
                    android:textColor="#ff000000"
                    android:textStyle="bold"
                    android:id="@+id/player2"
                    android:paddingLeft="5dp">
                </TextView>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">
                    <Button
                        android:id="@+id/p2_a1"
                        android:layout_height="wrap_content"
                        android:layout_width="40dp"
                        android:layout_weight=".5"
                        android:layout_margin="5dp"
                        android:text="@string/plus_one"
                        android:textStyle="bold"
                        android:background="#4e919191"
                        android:clickable="true"
                        android:onClick="updateP2">
                    </Button>
                    <Button
                        android:id="@+id/p2_s1"
                        android:layout_height="wrap_content"
                        android:layout_width="40dp"
                        android:layout_weight=".5"
                        android:layout_margin="5dp"
                        android:text="@string/minus_one"
                        android:textStyle="bold"
                        android:background="#4e919191"
                        android:clickable="true"
                        android:onClick="updateP2">
                    </Button>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:layout_gravity="center_horizontal">
                    <Button
                        android:id="@+id/p2_a5"
                        android:layout_height="wrap_content"
                        android:layout_width="40dp"
                        android:layout_weight=".5"
                        android:layout_margin="5dp"
                        android:text="@string/plus_five"
                        android:textStyle="bold"
                        android:background="#4e919191"
                        android:clickable="true"
                        android:onClick="updateP2">
                    </Button>
                    <Button
                        android:id="@+id/p2_s5"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:layout_margin="5dp"
                        android:text="@string/minus_five"
                        android:layout_width="40dp"
                        android:textStyle="bold"
                        android:background="#4e919191"
                        android:clickable="true"
                        android:onClick="updateP2">
                    </Button>
                </LinearLayout>
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:id="@+id/row2">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="10dp"
                >

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/player3"
                    style="@style/text"
                    android:id="@+id/player3"
                    android:paddingLeft="5dp">
                </TextView>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">
                    <Button
                        android:id="@+id/p3_a1"
                        android:layout_height="wrap_content"
                        android:layout_width="40dp"
                        android:layout_weight=".5"
                        android:layout_margin="5dp"
                        android:text="@string/plus_one"
                        android:textStyle="bold"
                        android:background="#4e919191"
                        android:clickable="true"
                        android:onClick="updateP3">
                    </Button>
                    <Button
                        android:id="@+id/p3_s1"
                        android:layout_height="wrap_content"
                        android:layout_width="40dp"
                        android:layout_weight=".5"
                        android:layout_margin="5dp"
                        android:text="@string/minus_one"
                        android:textStyle="bold"
                        android:background="#4e919191"
                        android:clickable="true"
                        android:onClick="updateP3">
                    </Button>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:layout_gravity="center_horizontal">
                    <Button
                        android:id="@+id/p3_a5"
                        android:layout_height="wrap_content"
                        android:layout_width="40dp"
                        android:layout_weight=".5"
                        android:layout_margin="5dp"
                        android:text="@string/plus_five"
                        android:textStyle="bold"
                        android:background="#4e919191"
                        android:clickable="true"
                        android:onClick="updateP3">
                    </Button>
                    <Button
                        android:id="@+id/p3_s5"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:layout_margin="5dp"
                        android:text="@string/minus_five"
                        android:layout_width="40dp"
                        android:textStyle="bold"
                        android:background="#4e919191"
                        android:clickable="true"
                        android:onClick="updateP3">
                    </Button>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="10dp"
                >

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/player4"
                    android:textColor="#ff000000"
                    android:textStyle="bold"
                    android:id="@+id/player4"
                    android:paddingLeft="5dp">
                </TextView>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">
                    <Button
                        android:id="@+id/p4_a1"
                        android:layout_height="wrap_content"
                        android:layout_width="40dp"
                        android:layout_weight=".5"
                        android:layout_margin="5dp"
                        android:text="@string/plus_one"
                        android:textStyle="bold"
                        android:background="#4e919191"
                        android:clickable="true"
                        android:onClick="updateP4">
                    </Button>
                    <Button
                        android:id="@+id/p4_s1"
                        android:layout_height="wrap_content"
                        android:layout_width="40dp"
                        android:layout_weight=".5"
                        android:layout_margin="5dp"
                        android:text="@string/minus_one"
                        android:textStyle="bold"
                        android:background="#4e919191"
                        android:clickable="true"
                        android:onClick="updateP4">
                    </Button>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:layout_gravity="center_horizontal">
                    <Button
                        android:id="@+id/p4_a5"
                        android:layout_height="wrap_content"
                        android:layout_width="40dp"
                        android:layout_weight=".5"
                        android:layout_margin="5dp"
                        android:text="@string/plus_five"
                        android:textStyle="bold"
                        android:background="#4e919191"
                        android:clickable="true"
                        android:onClick="updateP4">
                    </Button>
                    <Button
                        android:id="@+id/p4_s5"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:layout_margin="5dp"
                        android:text="@string/minus_five"
                        android:layout_width="40dp"
                        android:textStyle="bold"
                        android:background="#4e919191"
                        android:clickable="true"
                        android:onClick="updateP4">
                    </Button>
                </LinearLayout>
            </LinearLayout>
        </TableRow>
    </TableLayout>
    <TextView android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/you_lose"
        android:padding="4dp">
    </TextView>
</RelativeLayout>
